#!/bin/bash -e

echo "Updating apt-get"
apt-get update

echo "Installing git"
apt-get -y install git

echo "Installed git successfully"

echo "Getting hyperledger/fabric code"
export GOROOT=/var/vcap/packages/golang
export GOPATH=/var/vcap/packages/gopath
mkdir -p $GOPATH
export PATH=$PATH:$GOPATH/bin:$GOROOT/bin
go get -d github.com/hyperledger/fabric/peer

echo "Done getting hyperledger/fabric code"